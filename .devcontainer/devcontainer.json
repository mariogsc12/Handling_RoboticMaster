{
  "name": "handling-devcontainer",
  "build": {
    "dockerfile": "../docker/Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--net=host"
  ],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "QT_X11_NO_MITSHM": "1"
  },
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/manipulacion_ws/src,target=/workspaces/Handling_RoboticMaster/manipulacion_ws/src,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/workspaces/Handling_RoboticMaster",
  "postCreateCommand": "bash -c 'source /opt/ros/noetic/setup.bash && cd manipulacion_ws && catkin build -DCATKIN_ENABLE_TESTING=0 -j $(nproc --ignore=1)'",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-python.python",
    "ms-iot.vscode-ros",
    "mhutchie.git-graph"
  ]
}
